{
  "name": "@thewebforge/astro-og-images",
  "version": "0.0.0-development",
  "description": "Automatically generate OpenGraph images for your Astro site",
  "main": "index.js",
  "exports": {
    ".": "./src/index.js"
  },
  "scripts": {
    "commit": "git-cz",
    "test": "echo \"Error: no test specified\" && exit 1",
    "semantic-release": "semantic-release"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/thewebforge/astro-og-images.git"
  },
  "keywords": [
    "astro",
    "open graph",
    "image"
  ],
  "author": "CÃ©dric Bontems <cedric@thewebforge.dev> (https://thewebforge.dev/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/thewebforge/astro-og-images/issues"
  },
  "homepage": "https://github.com/thewebforge/astro-og-images#readme",
  "devDependencies": {
    "@semantic-release/changelog": "6.0.3",
    "cz-conventional-changelog": "3.3.0",
    "semantic-release": "21.0.5"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/changelog",
        {
          "changelogTitle": "@thewebforge/astro-og-images changelog"
        }
      ],
      "@semantic-release/npm",
      "@semantic-release/github"
    ]
  },
  "dependencies": {
    "@fontsource/atkinson-hyperlegible": "5.0.3",
    "@resvg/resvg-js": "2.4.1",
    "@types/node-fetch-cache": "3.0.0",
    "@types/react": "18.2.13",
    "astro": "2.7.0",
    "node-fetch-cache": "3.1.3",
    "kleur": "4.1.5",
    "satori": "0.10.1",
    "zod": "3.21.4"
  }
}
